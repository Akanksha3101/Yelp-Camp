<% include ../partials/header %>

<div class = "container">
    <header class = "jumbotron">
         <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span>Welcome to Yelp Camp!</h1>
         <p>View our hand-picked campgrounds from all over the world</p>
         <p>
             
             <a href = "/campgrounds/new" class = "btn btn-default btn-primary">Add A New Campground</a>
         </p>
    </header>
    
    <div class = "row camp">
        <% campgrounds.forEach(function(campground){ %>
            <div class = "col-lg-3 col-md-3 col-sm-6 col-xs-12">
                
                <div class = "thumbnail resize">
                    <img src = "<%= campground.image %>">
                       
                     <div class = "caption">
                         
                       <h4><%= campground.name %></h4>
                         
                     </div>
                    <a href = "/campgrounds/<%= campground._id%>" class = "btn btn-primary">Show More!</a>
                </div>
                
            </div>
        <% }) %>
        
    </div>
</div>
<% include ../partials/footer %>