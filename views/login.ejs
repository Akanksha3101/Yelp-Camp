<% include ./partials/header %>
<div class = "container login">
    <div class = "well login">
        <div class = "page-header">
            <h1>Login</h1>
        </div>
        <div class = "form-group">
            <form action = "/login" method = "POST">
                
                <label>Username</label>
                <input class = "form-control login" type = "text" placeholder = "Enter Username" name = "username">
                <label>Password</label>
                <input class = "form-control login" type = "password" placeholder = "Enter Password" name = "password">
                <button class = "btn btn-success login">Login</button>
                
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>